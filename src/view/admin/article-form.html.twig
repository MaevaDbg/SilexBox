{% extends "admin/_layout.html.twig" %}

{% block content %}

<h3><i class="fa fa-angle-right"></i> Blog</h3>

<div class="row mt">
    <div class="col-md-12">
        <div class="form-panel">

            <h4 class="mb"><i class="fa fa-angle-right"></i> {{ titre }}</h4>

            {{ form_start(form, {'attr': {'class': 'form-horizontal style-form'}}) }}

                <div class="form-group">
                    {{ form_errors(form.title) }}
                    <label class="col-sm-2 col-sm-2 control-label">Titre</label>
                    <div class="col-sm-10">{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}</div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.slug) }}
                    <label class="col-sm-2 col-sm-2 control-label">Slug</label>
                    <div class="col-sm-10">{{ form_widget(form.slug, {'attr': {'class': 'form-control'}}) }}</div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.excerpt) }}
                    <label class="col-sm-2 col-sm-2 control-label">Chapeau</label>
                    <div class="col-sm-10">{{ form_widget(form.excerpt, {'attr': {'class': 'form-control'}}) }}</div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.image) }}
                    <label class="col-sm-2 col-sm-2 control-label">Image</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        <span class="help-block">Préciser l'extension du fichier avec le nom (Ex : mon-image.jpg)</span>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.content) }}
                    <label class="col-sm-2 col-sm-2 control-label">Contenu</label>
                    <div class="col-sm-10">{{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}</div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.datePublication) }}
                    <label class="col-sm-2 col-sm-2 control-label">Date de publication</label>
                    <div class="col-sm-10">{{ form_widget(form.datePublication) }}</div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.status) }}
                    <label class="col-sm-2 col-sm-2 control-label">Status</label>
                    <div class="col-sm-10">{{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}</div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.video) }}
                    <label class="col-sm-2 col-sm-2 control-label">Nom de la vidéo</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.video, {'attr': {'class': 'form-control'}}) }}
                        <span class="help-block">Ne pas préciser l'extension pour pouvoir afficher les différents type de vidéos</span>
                    </div>

                    {{ form_errors(form.imageVideo) }}
                    <label class="col-sm-2 col-sm-2 control-label">Poster de la vidéo</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.imageVideo, {'attr': {'class': 'form-control'}}) }}
                        <span class="help-block">Préciser l'extension du fichier avec le nom (Ex : mon-image.jpg)</span>
                    </div>

                    {{ form_errors(form.lienYoutube) }}
                    <label class="col-sm-2 col-sm-2 control-label">Lien vers une vidéo youtube</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.lienYoutube, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_errors(form.lang) }}
                    <label class="col-sm-2 col-sm-2 control-label">Langue</label>
                    <div class="col-sm-10">{{ form_widget(form.lang, {'attr': {'class': 'form-control'}}) }}</div>
                </div>

                <div class="checkbox">
                  <label>
                    {{ form_widget(form.homePush) }}
                    Mettre en avant sur la home
                  </label>
                </div>
                <hr/>

                <button type="submit" class="btn btn-theme">Valider</button>

            {{ form_end(form) }}

        </div><!-- /content-panel -->
    </div><!-- /col-md-12 -->
</div><!-- /row -->

{% endblock %}