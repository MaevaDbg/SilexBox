{% extends "_layout.html.twig" %}

{% block content %}
    
    {% if articles is empty %}
	   <p>Il n'y a pas encore d'articles</p>
    {% else %}
        <ul>
        {% for art in articles %}
            <li>
                <h1>{{ art.title }}</h1>      
                <p>{{ art.datePublication|localizeddate("medium", "short", "fr") }}</p>
                <p>Image : {{ art.image }}</p>
                <p>{{ art.excerpt }}</p>
                <p><a href="{{ path('article', {slug: art.slug}) }}">Lire la suite</a></p>
            </li>
        {% endfor %}
        </ul>
    {% endif %}
    
{% endblock %}